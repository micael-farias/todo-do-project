    <script>
      $(document).ready(function() {
    $(".cards").sortable({
        connectWith: ".cards",
        placeholder: "card-placeholder",
        cursor: "move",
        revert: 300,
        delay: 150,
        tolerance: "pointer",

        // Modifique o helper para 'clone'
        helper: "clone",

        start: function(e, ui) {
            ui.placeholder.height(ui.item.height());
            ui.helper.css('transform', 'rotate(3deg)');
            ui.helper.css('z-index', 100);
        },
        stop: function(e, ui) {
            ui.item.css('transform', '');
        },
        update: function(e, ui) {
            console.log("Card movido: " + ui.item.text());
            console.log("Nova coluna: " + ui.item.closest(".column").find("h3").text());
        }
    }).disableSelection();
});

    </script>