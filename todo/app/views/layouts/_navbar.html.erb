                <%= image_tag current_user.avatar, class: 'rounded-circle', alt: 'Usuário', width: '40', height: '40' %>
              <% else %>
                <%= image_tag 'default_avatar.png', class: 'rounded-circle', alt: 'Usuário', width: '40', height: '40' %>
              <% end %>
