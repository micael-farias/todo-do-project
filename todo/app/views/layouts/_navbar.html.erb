    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto"></ul>
      <% if current_user %>

        <form class="d-flex me-3 position-relative" id="searchForm" role="search">
          <div class="search-group">
            <div class="input-group">
                <span class="input-group-text bg-transparent border-0">
                <i class="bi bi-search text-white"></i>
                </span>
                <input class="form-control bg-transparent text-white border-white" type="search" placeholder="Pesquisar card" aria-label="Pesquisar" id="searchInput" autocomplete="off">
