            <ul class="list-group position-absolute w-100 list-group-results" id="searchResults"></ul>
          </div>          
        </form>

        <div class="d-flex align-items-center">
          <% if current_user.active_theme_mood %>
            <span id="navbar-mood" class="text-warning fw-bold me-3">
