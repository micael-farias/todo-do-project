<div class="d-flex align-items-center justify-content-center min-vh-100 new-sessions-container">
  <div class="card shadow p-4">
    <div class="card-body">
      <h2 class="text-center mb-4 text-black">Login</h2>

      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "form" do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label text-black" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "Enter your email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label text-black" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true, placeholder: "Enter your password" %>
        </div>

        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label text-black" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
