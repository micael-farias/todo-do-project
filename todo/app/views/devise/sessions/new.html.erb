<div class="d-flex align-items-center justify-content-center min-vh-100 new-sessions-container">
  <div class="shadow p-4 rounded card-devise-user-body">
      <div class="d-flex">
          <h2 class="text-center m-0 mb-4 text-black flex-grow-1">
              Entrar
          </h2>
      </div>
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "form" do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label text-black" %>
          <%= f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "Digite seu email" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label text-black" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true, placeholder: "Digite sua senha" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Entrar", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
