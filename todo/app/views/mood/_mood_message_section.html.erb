<div class="mood-message-section" style="<%= 'display: none;' if @has_mood_today %>" id="mood-message-section">
  <h3 class="selected-mood-text" id="selected-mood-text">Sua Análise de Humor: <%= @active_mood.present? ? @active_mood.mood.name : "Nenhum humor selecionado ainda" %></h3>
  
  <div class="mood-section-content">
    <div class="image-container">
      <div>
        <img id="mood-image" 
             src="<%= @active_mood.present? ? @active_mood.image_url : 'https://via.placeholder.com/250' %>" 
             alt="Imagem de Humor"
        >
      </div>
    </div>
    
    <div class="vertical-line-separator"></div>

    <div class="text-explaining-mood">
      <p id="mood-message">
        <%= @random_message.present? ? @random_message.message : "Texto falando algo sobre o humor atual. Aqui você pode descrever o que o humor selecionado significa ou fornecer detalhes adicionais." %>
      </p>
      <%= link_to board_path(@daily_board), class: 'board-link' do %>
        <u>Vamos ver seu quadro de tarefas diário? Clique aqui</u>
      <% end %>
    </div>
  </div>
</div>
